.row.mb-2
    .col-12
        .card.shadow-lg
            .card-header.d-flex.justify-content-between.bg-white
                #user.d-flex
                    img(src=imgSrc, alt="" srcset="" height="40px").rounded-circle
                    p.text-inline= username
                #contact
                    if status==true
                        h5
                            span.badge.badge-success มีผู้รับงานแล้ว
                    else
                        h5
                            span.badge.badge-info เปิดรับงาน
                        p
                            a(href="").text-primary
                                | ติดต่องาน 
                                i.fas.fa-phone
            .card-body
                //เส้นทาง
                .row
                    .col.d-flex
                        h5.m-2 
                            i.fas.fa-location-arrow.text-danger
                        p.m-2= start 
                            i.fas.fa-arrow-right
                            = destination
                //สินค้า
                .row
                    .col.d-flex
                        h5.m-2
                            i.fas.fa-shopping-cart.text-warning
                        p.m-2= goods
                //น้ำหนักสินค้า
                .row
                    .col.d-flex
                        h5.m-2
                            i.fas.fa-weight 
                        p.m-2= weigth
                            |  กิโลกรัม
                //เรทราคา
                .row
                    .col.d-flex
                        h5.m-2
                            i.fas.fa-money-bill-wave-alt.text-success
                        p.m-2= rateMoney
                            |  บาท
                //
                .row
                    .col.d-flex
                        h5.m-2
                            i.fas.fa-info-circle.text-primary
                        p.m-2= describe
            a(href="/work/info/1").btn.text-center.text-underline.btn-info.rounded-0
                | ดูข้อมูลเพิ่มเติม
