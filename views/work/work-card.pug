.row.mb-2
    .col-12
        .card.shadow-lg
            .card-header.d-flex.justify-content-between.bg-white
                #user.d-flex
                    img(src=imgSrc, alt="" srcset="" height="40px").rounded-circle
                    p.text-inline= firstname + " " + lastname
                #contact
                    if status==1
                        h5
                            span.badge.badge-success มีผู้รับงานแล้ว
                    else
                        h5
                            span.badge.badge-info เปิดรับงาน
                        p
                            a(href="").text-primary
                                | ติดต่องาน 
                                i.fas.fa-phone
            .card-body
                //เส้นทาง
                .row
                    .col.d-flex
                        h5.m-2 
                            i.fas.fa-location-arrow.text-danger
                        p.m-2= location_start 
                            i.fas.fa-arrow-right
                            = location_destination
                //สินค้า
                if goods
                    .row
                        .col.d-flex
                            h5.m-2
                                i.fas.fa-shopping-cart.text-warning
                            p.m-2= goods
                //น้ำหนักสินค้า
                if weight
                    .row
                        .col.d-flex
                            h5.m-2
                                i.fas.fa-weight 
                            p.m-2= weight
                                |  กิโลกรัม
                //เรทราคา
                if rateMoney
                    .row
                        .col.d-flex
                            h5.m-2
                                i.fas.fa-money-bill-wave-alt.text-success
                            p.m-2= rateMoney
                //ข้อมูลเพิ่มเติม
                if infomation
                    .row
                        .col.d-flex
                            h5.m-2
                                i.fas.fa-info-circle.text-primary
                            p.m-2= infomation
            a(href="/work/info/"+id).btn.text-center.text-underline.btn-dark.rounded-0
                | ดูข้อมูลเพิ่มเติม
